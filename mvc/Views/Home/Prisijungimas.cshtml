@model mvc.Models.Vartotoja
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    var returnUrl = ViewData["ReturnUrl"] as string;
    var error = TempData["Error"] as string;
    var pavyko = TempData["pavyko"] as string;
}
<h1>Prisijungimas</h1>
@if (!string.IsNullOrEmpty(error))
{
    <h3 class="alert-danger" style="padding:20px">@error</h3>
}
@if (!string.IsNullOrEmpty(pavyko))
{
    <h3 class="alert-success" style="padding:20px">@pavyko</h3>
}
<div class="row">
    <div class="col-md-4">
        <section>
            <form id="account" method="post">
                <h4>Įveskite prisijungimo duomenis, kad prisijungtumėte:</h4>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="EPastas"></label>
                    <input asp-for="EPastas" class="form-control" name="username" />
                    <span asp-validation-for="EPastas" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Slaptazodis"></label>
                    <input asp-for="Slaptazodis" class="form-control" type="password" name="password" />
                    <span asp-validation-for="Slaptazodis" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Prisijungti</button>
                </div>
            </form>
        </section>
        <h5>Nesate užsiregistravę? <a href="registracija" class="link-primary">Užsiregistruokite!</a></h5>
    </div>
</div>
<hr />
<a class="btn btn-primary" asp-controller="Skelbimas" asp-action="Index">Grįžti į skelbimų sąrašą</a>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}